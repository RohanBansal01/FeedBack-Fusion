package com.feedbackfusion.repository;

import java.io.InputStream;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.util.Properties;

/**
 * A utility class for managing database connections. It reads connection details
 * from a properties file, promoting reusability and maintainability.
 * This class is highly cohesive, as its sole purpose is to manage connections.
 */
public class DBConnection {
    private static Properties props = new Properties();

    static {
        try (InputStream input = DBConnection.class.getResourceAsStream("/db.properties")) {
            if (input == null) {
                System.err.println("db.properties not found in the classpath.");
            }
            props.load(input);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    /**
     * Establishes and returns a new database connection.
     * @return A valid database Connection object.
     * @throws SQLException If a database access error occurs.
     */
    public static Connection getConnection() throws SQLException {
        return DriverManager.getConnection(
                props.getProperty("db.url"),
                props.getProperty("db.user"),
                props.getProperty("db.password")
        );
    }
}